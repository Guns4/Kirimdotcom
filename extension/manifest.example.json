{
    "manifest_version": 3,
    "name": "CekKirim - Tracking Helper",
    "version": "1.0.0",
    "description": "Cek resi pengiriman dengan cepat melalui context menu",
    "permissions": [
        "contextMenus",
        "tabs"
    ],
    "background": {
        "service_worker": "background/background.js"
    },
    "action": {
        "default_title": "CekKirim - Cek Resi",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
{
    "manifest_version": 3,
    "name": "CekKirim Resi Highlighter",
    "version": "1.0",
    "description": "Automatically detects carrier receipts and tracks them via CekKirim.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}
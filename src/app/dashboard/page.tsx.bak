import { redirect } from 'next/navigation';
import { createClient } from '@/utils/supabase/server';
import { DashboardLayout } from '@/components/dashboard/DashboardLayout';
import { Package, TrendingUp, Clock, Star } from 'lucide-react';

export default async function DashboardPage() {
  const supabase = await createClient();

  const {
    data: { user },
  } = await supabase.auth.getUser();

  if (!user) {
    redirect('/login');
  }

  // Fetch user profile
  const { data: profile } = await supabase
    .from('profiles')
    .select('*')
    .eq('id', user.id)
    .single();

  // Fetch user search history count
  const { count: searchCount } = await supabase
    .from('search_history')
    .select('*', { count: 'exact', head: true })
    .eq('user_id', user.id);

  const stats = [
    {
      label: 'Total Pencarian',
      value: searchCount || 0,
      icon: Package,
      color: 'from-blue-500 to-cyan-500',
    },
    {
      label: 'Status Akun',
      value: profile?.role === 'premium' ? 'Premium' : 'Gratis',
      icon: Star,
      color: 'from-yellow-500 to-orange-500',
    },
    {
      label: 'Pencarian Bulan Ini',
      value: searchCount || 0,
      icon: TrendingUp,
      color: 'from-green-500 to-emerald-500',
    },
    {
      label: 'Member Sejak',
      value: new Date(profile?.created_at || '').toLocaleDateString('id-ID', {
        month: 'short',
        year: 'numeric',
      }),
      icon: Clock,
      color: 'from-purple-500 to-pink-500',
    },
  ];

  return (
    <DashboardLayout
      user={{ email: user.email || '', id: user.id }}
      profile={profile}
    >
      <div className="space-y-6">
        <div>
          <h1 className="text-3xl font-bold text-white mb-2">
            Dashboard Overview
          </h1>
          <p className="text-gray-400">Selamat datang kembali, {user.email}!</p>
        </div>

        {/* Stats Grid */}
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {stats.map((stat, index) => {
            const Icon = stat.icon;
            return (
              <div
                key={index}
                className="glass-card p-6 hover:border-indigo-500/50 transition-all"
              >
                <div className="flex items-center justify-between mb-4">
                  <div
                    className={`w-12 h-12 rounded-xl bg-gradient-to-r ${stat.color} flex items-center justify-center`}
                  >
                    <Icon className="w-6 h-6 text-white" />
                  </div>
                </div>
                <p className="text-gray-400 text-sm mb-1">{stat.label}</p>
                <p className="text-2xl font-bold text-white">{stat.value}</p>
              </div>
            );
          })}
        </div>

        {/* Quick Actions */}
        <div className="glass-card p-6">
          <h2 className="text-xl font-bold text-white mb-4">Aksi Cepat</h2>
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <a
              href="/"
              className="p-4 bg-white/5 hover:bg-white/10 rounded-xl border border-white/10 hover:border-indigo-500/50 transition-all"
            >
              <h3 className="font-semibold text-white mb-1">Cek Ongkir</h3>
              <p className="text-sm text-gray-400">
                Cek tarif pengiriman ke berbagai kota
              </p>
            </a>
            <a
              href="/"
              className="p-4 bg-white/5 hover:bg-white/10 rounded-xl border border-white/10 hover:border-indigo-500/50 transition-all"
            >
              <h3 className="font-semibold text-white mb-1">Lacak Paket</h3>
              <p className="text-sm text-gray-400">
                Lacak status pengiriman paket Anda
              </p>
            </a>
          </div>
        </div>
      </div>
    </DashboardLayout>
  );
}
